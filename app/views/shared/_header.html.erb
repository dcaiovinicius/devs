<header>
  <nav class="relative bg-gray-800 border-b border-gray-800">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center justify-between gap-4">

        <!-- Logo -->
        <%= link_to root_path, class: "flex items-center gap-2 shrink-0 group" do %>
          <span class="text-lg font-bold text-white group-hover:text-gray-200 transition">DevsBR</span>
        <% end %>

        <!-- Desktop: Links + Auth -->
        <div class="hidden md:flex md:items-center md:gap-1">
          <%= link_to developers_path,
                      class: "px-4 py-2 rounded-lg text-sm font-medium text-gray-300 hover:bg-gray-800 hover:text-white transition" do %>
            Desenvolvedores
          <% end %>

          <% if user_signed_in? %>
            <div data-controller="dropdown" class="relative ml-2">
              <button type="button"
                      data-action="click->dropdown#toggle keydown.escape->dropdown#escape"
                      class="flex items-center gap-2 px-2 py-1.5 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-white focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900 transition"
                      aria-expanded="false"
                      aria-haspopup="true">
                <% if current_user.developer&.persisted? && current_user.developer.avatar.attached? %>
                  <%= image_tag current_user.developer.avatar,
                      class: "h-8 w-8 rounded-full object-cover ring-2 ring-gray-700",
                      alt: "" %>
                <% else %>
                  <div class="h-8 w-8 rounded-full bg-indigo-600 flex items-center justify-center text-white font-medium text-sm shrink-0">
                    <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                    </svg>
                  </div>
                <% end %>
                <span class="max-w-[120px] truncate text-sm font-medium"><%= current_user.email.split("@").first %></span>
                <svg class="h-4 w-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>

              <div data-dropdown-target="menu"
                   class="hidden absolute right-0 z-20 mt-2 w-56 origin-top-right rounded-lg bg-gray-800 border border-gray-700 shadow-xl py-1">
                <% if current_user.developer&.persisted? %>
                  <%= link_to edit_developer_path(current_user.developer),
                              class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-300 hover:bg-gray-700 hover:text-white transition" do %>
                    <svg class="h-4 w-4 text-gray-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Editar perfil
                  <% end %>
                  <%= link_to developer_path(current_user.developer),
                              class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-300 hover:bg-gray-700 hover:text-white transition" do %>
                    <svg class="h-4 w-4 text-gray-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    Ver perfil
                  <% end %>
                <% else %>
                  <%= link_to new_developer_path,
                              class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-300 hover:bg-gray-700 hover:text-white transition" do %>
                    <svg class="h-4 w-4 text-gray-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                    </svg>
                    Criar perfil
                  <% end %>
                <% end %>
                <%= link_to edit_user_registration_path,
                            class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-300 hover:bg-gray-700 hover:text-white transition" do %>
                  <svg class="h-4 w-4 text-gray-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  Configurações
                <% end %>
                <div class="border-t border-gray-700 my-1"></div>
                <%= button_to destroy_user_session_path, method: :delete,
                            class: "flex items-center gap-3 w-full px-4 py-2.5 text-sm text-red-400 hover:bg-gray-700 hover:text-red-300 transition text-left" do %>
                  <svg class="h-4 w-4 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                  </svg>
                  Sair
                <% end %>
              </div>
            </div>
          <% else %>
            <%= link_to "Entrar", new_user_session_path,
                class: "px-4 py-2 rounded-lg text-sm font-medium text-gray-300 hover:bg-gray-800 hover:text-white transition" %>
            <%= link_to "Cadastrar", new_user_registration_path,
                class: "px-4 py-2 rounded-lg text-sm font-semibold text-white bg-indigo-600 hover:bg-indigo-500 transition" %>
          <% end %>
        </div>

        <!-- Mobile: Right side -->
        <div class="flex md:hidden items-center gap-2">
          <%= link_to developers_path,
                      class: "p-2 rounded-lg text-gray-400 hover:bg-gray-800 hover:text-white transition",
                      aria_label: "Ver desenvolvedores" do %>
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          <% end %>
          <div data-controller="dropdown">
            <button type="button"
                    data-action="click->dropdown#toggle keydown.escape->dropdown#escape"
                    class="inline-flex items-center justify-center p-2 rounded-lg text-gray-400 hover:bg-gray-800 hover:text-white focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 transition"
                    aria-expanded="false"
                    aria-haspopup="true">
              <span class="sr-only">Abrir menu</span>
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>

            <div data-dropdown-target="menu"
                 class="hidden absolute top-16 left-0 right-0 z-20 bg-gray-800 border-t border-gray-700 shadow-xl md:hidden">
              <div class="px-2 py-3 space-y-0.5">
                <% if user_signed_in? %>
                  <% if current_user.developer&.persisted? %>
                    <%= link_to edit_developer_path(current_user.developer),
                                class: "flex items-center gap-3 px-4 py-3 rounded-lg text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white transition" do %>
                      <svg class="h-5 w-5 text-gray-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                      Editar perfil
                    <% end %>
                    <%= link_to developer_path(current_user.developer),
                                class: "flex items-center gap-3 px-4 py-3 rounded-lg text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white transition" do %>
                      <svg class="h-5 w-5 text-gray-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                      Ver perfil
                    <% end %>
                  <% else %>
                    <%= link_to new_developer_path,
                                class: "flex items-center gap-3 px-4 py-3 rounded-lg text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white transition" do %>
                      <svg class="h-5 w-5 text-gray-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                      </svg>
                      Criar perfil
                    <% end %>
                  <% end %>
                  <%= link_to edit_user_registration_path,
                              class: "flex items-center gap-3 px-4 py-3 rounded-lg text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white transition" do %>
                    <svg class="h-5 w-5 text-gray-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Configurações
                  <% end %>
                  <div class="border-t border-gray-700 my-2"></div>
                  <%= button_to destroy_user_session_path, method: :delete,
                              class: "flex items-center gap-3 w-full px-4 py-3 rounded-lg text-base font-medium text-red-400 hover:bg-gray-700 hover:text-red-300 transition text-left" do %>
                    <svg class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                    Sair
                  <% end %>
                <% else %>
                  <%= link_to "Entrar", new_user_session_path,
                      class: "flex items-center gap-3 px-4 py-3 rounded-lg text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white transition" %>
                  <%= link_to "Cadastrar", new_user_registration_path,
                      class: "flex items-center gap-3 px-4 py-3 rounded-lg text-base font-medium text-white bg-indigo-600 hover:bg-indigo-500 transition" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
