<header>
<!-- app/views/layouts/_navbar.html.erb -->
  <nav class="bg-gray-800 border-b border-gray-700">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center justify-between">

        <!-- Logo -->
        <div class="shrink-0">
          <%= link_to root_path, class: "text-xl font-bold text-white hover:text-gray-300 transition" do %>
            Devs
          <% end %>
        </div>

        <!-- Desktop: Sign In / Sign Up ou Profile -->
        <div class="hidden md:flex md:items-center md:space-x-6">

          <% if user_signed_in? %>
            <!-- Profile Dropdown (jÃ¡ existente, com Stimulus) -->
            <div data-controller="dropdown" class="relative">
              <button 
                type="button"
                data-action="click->dropdown#toggle keydown.escape->dropdown#escape"
                class="flex items-center space-x-3 text-gray-300 hover:text-white focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded-full"
              >
                <div class="h-9 w-9 rounded-full bg-indigo-600 flex items-center justify-center text-white font-medium text-sm">
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                  </svg>
                </div>
                <span class="hidden sm:inline font-medium">Account</span>
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>

              <div 
                data-dropdown-target="menu"
                class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-gray-800 border border-gray-700 shadow-lg py-1"
              >
                <%= link_to "Profile", developer_path(current_user), class: "block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white" %>
                <%= link_to "Settings", edit_user_registration_path, class: "block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white" %>
                <div class="border-t border-gray-700 my-1"></div>
                <%= button_to "Sign Out", destroy_user_session_path, method: :delete,
                      class: "block w-full text-left px-4 py-2 text-sm text-red-400 hover:bg-gray-700 hover:text-red-300" %>
              </div>
            </div>

          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium transition ml-3" %>
          <% end %>

        </div>

        <!-- Mobile: Hamburger Button -->
        <div class="md:hidden" data-controller="dropdown">
          <button 
            type="button" 
            data-action="click->dropdown#toggle keydown.escape->dropdown#escape"
            class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
          >
            <span class="sr-only">Open main menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>

          <!-- Mobile Menu (aparece abaixo ou full) -->
          <div 
            data-dropdown-target="menu"
            class="hidden absolute top-16 left-0 right-0 z-10 bg-gray-800 border-t border-gray-700 shadow-lg md:hidden"
          >
            <div class="px-2 pt-2 pb-3 space-y-1">
              <% if user_signed_in? %>
                <%= link_to "Profile", developer_path(current_user), class: "block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white" %>
                <%= link_to "Settings", edit_user_registration_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white" %>
                <%= button_to "Sign Out", destroy_user_session_path, method: :delete,
                      class: "block w-full text-left px-3 py-2 rounded-md text-base font-medium text-red-400 hover:bg-gray-700 hover:text-red-300" %>
              <% else %>
                <%= link_to "Sign In", new_user_session_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white" %>
                <%= link_to "Sign Up", new_user_registration_path, class: "block px-3 py-2 rounded-md text-base font-medium bg-indigo-600 hover:bg-indigo-700 text-white" %>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </nav>
</header>