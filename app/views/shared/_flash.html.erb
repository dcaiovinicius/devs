<% if flash.any? %>
  <div class="space-y-3 mb-6">
    <% flash.each do |type, message| %>
      <% next if message.blank? %>
      <% type = type.to_sym %>

      <div role="alert"
           class="flex items-start gap-3 rounded-lg border p-4 <%= case type
             when :notice then "border-green-200 bg-green-50 text-green-800"
             when :alert then "border-red-200 bg-red-50 text-red-800"
             else "border-gray-200 bg-gray-50 text-gray-800"
           end %>"
           data-turbo-temporary>
        <% if type == :notice %>
          <svg class="h-5 w-5 shrink-0 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% elsif type == :alert %>
          <svg class="h-5 w-5 shrink-0 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% end %>
        <p class="text-sm font-medium"><%= message %></p>
      </div>
    <% end %>
  </div>
<% end %>
