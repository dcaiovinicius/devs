<section class="min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-md bg-white rounded-xl shadow-lg p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">
      Sign up
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: inputs_css_class %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-500 mb-1">
            m√≠nimo <%= @minimum_password_length %> caracteres
          </p>
        <% end %>
        <%= f.password_field :password,
          autocomplete: "new-password",
          class: inputs_css_class %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          class: inputs_css_class %>
      </div>

      <div>
        <%= f.submit "Sign up",
          class: "w-full bg-black py-2 px-4 rounded-md bg-gray-600 hover:bg-gray-500 text-gray-100 transition font-semibold" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
