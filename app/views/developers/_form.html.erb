<%= form_with model: @developer, local: true, class: "space-y-8", data: { controller: "preview" } do |f| %>

  <%= render "shared/form_errors", resource: @developer %>

  <!-- Foto / Avatar -->
  <div>
    <h2 class="text-sm font-semibold text-gray-900 mb-3">Foto do perfil</h2>
    <div class="flex flex-col sm:flex-row items-center gap-6">
      <div class="relative w-28 h-28 sm:w-32 sm:h-32 rounded-full overflow-hidden ring-2 ring-gray-200 bg-gray-50 shrink-0">
        <%= image_tag @developer.avatar.attached? ? url_for(@developer.avatar) : "https://images.unsplash.com/photo-1463453091185-61582044d556?ixlib=rb-4.0.3&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80",
            alt: "Preview do avatar",
            id: "preview",
            class: "w-full h-full object-cover" %>
      </div>
      <div class="flex-1 w-full">
        <label class="cursor-pointer inline-flex items-center justify-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm font-medium py-2.5 px-5 rounded-lg border border-gray-300 transition w-full sm:w-auto">
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          Escolher foto
          <%= f.file_field :avatar,
                           accept: "image/*",
                           class: "hidden",
                           data: { action: "change->preview#update" } %>
        </label>
        <p class="mt-2 text-xs text-gray-500">JPG, PNG ou GIF. Máx. 5MB.</p>
      </div>
    </div>
  </div>

  <!-- Sobre você -->
  <div class="space-y-5">
    <h2 class="text-sm font-semibold text-gray-900">Sobre você</h2>

    <div>
      <%= f.label :hero, "Headline", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
      <%= f.text_field :hero,
                       placeholder: "Ex: Full-stack Ruby dev | 5+ anos de experiência",
                       class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 px-4" %>
    </div>

    <div>
      <%= f.label :bio, class: "block text-sm font-medium text-gray-700 mb-1.5" %>
      <%= f.text_area :bio,
                      rows: 5,
                      placeholder: "Fale um pouco sobre você, tecnologias que domina, experiência profissional...",
                      class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 px-4 resize-y" %>
    </div>
  </div>

  <!-- Disponibilidade -->
  <div>
    <h2 class="text-sm font-semibold text-gray-900 mb-3">Disponibilidade</h2>
    <div>
      <%= f.label :available_on, "Data em que estará disponível", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
      <%= f.date_field :available_on,
                       class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 px-4 max-w-xs" %>
    </div>
  </div>

  <!-- Links -->
  <div class="space-y-5">
    <h2 class="text-sm font-semibold text-gray-900">Links</h2>

    <div>
      <%= f.label :website, class: "block text-sm font-medium text-gray-700 mb-1.5" %>
      <%= f.url_field :website,
                      placeholder: "https://seusite.com",
                      class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 px-4" %>
    </div>

    <div class="grid sm:grid-cols-2 gap-5">
      <div>
        <%= f.label :github, "GitHub", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
        <%= f.url_field :github,
                        placeholder: "https://github.com/seuuser",
                        class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 px-4" %>
      </div>
      <div>
        <%= f.label :twitter, class: "block text-sm font-medium text-gray-700 mb-1.5" %>
        <%= f.url_field :twitter,
                        placeholder: "https://x.com/seuuser",
                        class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 px-4" %>
      </div>
    </div>
  </div>

  <div class="pt-4 flex flex-col-reverse sm:flex-row sm:justify-end sm:gap-3">
    <%= link_to "Cancelar", @developer.persisted? ? developer_path(@developer) : developers_path,
        class: "mt-3 sm:mt-0 inline-flex justify-center items-center px-5 py-2.5 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition" %>
    <%= f.submit @developer.persisted? ? "Salvar alterações" : "Criar perfil",
                 class: "inline-flex justify-center items-center px-6 py-2.5 border border-transparent rounded-lg text-sm font-semibold text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition" %>
  </div>
<% end %>
