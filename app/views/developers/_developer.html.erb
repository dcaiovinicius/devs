<li>
  <%= link_to developer do %>
    <article class="flex gap-4 rounded-lg border border-gray-200 hover:bg-gray-100 bg-white p-8 shadow-sm">
      <img class="h-24 w-24 rounded-full object-cover" id="preview" src="<%= developer.avatar.attached? ? url_for(developer.avatar) : 'https://images.unsplash.com/photo-1463453091185-61582044d556?ixlib=rb-4.0.3&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80' %>"> 
      
      <div class="flex-1">
        <header class="flex items-start justify-between gap-4">
          <h3 class="text-base font-semibold text-gray-900"><%= truncate(developer.hero, length: 140) %></h3>
        
          <p class="text-nowrap text-xs font-medium text-green-700">Available now</p>
        </header>

        <p class="mt-2 text-sm text-gray-600"><%= truncate(developer.bio, length: 340) %></p>
      </div>
    </article>
  <% end %>
</li>