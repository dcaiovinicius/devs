<section class="max-w-2xl mx-auto py-8 px-4">
  <div class="mb-6">
    <%= link_to developer_path(@developer),
                class: "inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-gray-900 transition" do %>
      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Voltar ao perfil
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="px-6 py-5 border-b border-gray-200 bg-gray-50">
      <h1 class="text-xl font-bold text-gray-900">Editar perfil</h1>
      <p class="mt-1 text-sm text-gray-600">Atualize suas informações para aparecer nas buscas</p>
    </div>

    <div class="p-6 sm:p-8">
      <%= render "form" %>
    </div>
  </div>
</section>
