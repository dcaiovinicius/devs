<section class="mx-auto max-w-3xl py-8 px-4">
  <article class="rounded-lg border border-gray-200 bg-white p-8 shadow-sm">
    <div class="flex flex-col items-center text-center gap-6">
      <div class="flex-shrink-0 flex flex-col items-center">
        <%= image_tag @developer.avatar.attached? ? url_for(@developer.avatar) : "https://images.unsplash.com/photo-1463453091185-61582044d556?ixlib=rb-4.0.3&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80",
                      alt: "Avatar",
                      class: "h-32 w-32 rounded-full object-cover border-2 border-gray-200" %>
        <% if user_signed_in? && current_user.developer == @developer %>
          <%= link_to "Edit Profile",
                      edit_developer_path(@developer),
                      class: "mt-4 inline-flex items-center justify-center bg-gray-600 hover:bg-gray-500 text-white font-medium py-2 px-4 rounded-md text-sm transition" %>
        <% end %>
      </div>

      <div class="flex-1 min-w-0 w-full">
        <header class="flex flex-col sm:flex-row flex-wrap items-center justify-center gap-4">
          <h1 class="text-xl font-semibold text-gray-900 leading-tight">
            <%= @developer.hero %>
          </h1>
          <% if @developer.available_on <= Date.current %>
            <span class="shrink-0 inline-flex items-center rounded-full bg-green-100 px-3 py-0.5 text-xs font-medium text-green-800">
              Available now
            </span>
          <% else %>
            <span class="shrink-0 text-sm text-gray-500">
              Available <%= l(@developer.available_on, format: :long) %>
            </span>
          <% end %>
        </header>

        <div class="mt-4 text-sm text-gray-600 whitespace-pre-wrap"><%= @developer.bio %></div>

        <% if @developer.website.present? || @developer.github.present? || @developer.twitter.present? %>
          <div class="mt-6 pt-6 border-t border-gray-200">
            <h2 class="text-sm font-medium text-gray-900 mb-3">Links</h2>
            <div class="flex flex-wrap justify-center gap-3">
              <% if @developer.website.present? %>
                <%= link_to @developer.website,
                            target: "_blank",
                            rel: "noopener noreferrer",
                            class: "inline-flex items-center gap-1.5 text-sm text-indigo-600 hover:text-indigo-800" do %>
                  <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                  Website
                <% end %>
              <% end %>
              <% if @developer.github.present? %>
                <%= link_to @developer.github,
                            target: "_blank",
                            rel: "noopener noreferrer",
                            class: "inline-flex items-center gap-1.5 text-sm text-gray-700 hover:text-gray-900" do %>
                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                  </svg>
                  GitHub
                <% end %>
              <% end %>
              <% if @developer.twitter.present? %>
                <%= link_to @developer.twitter,
                            target: "_blank",
                            rel: "noopener noreferrer",
                            class: "inline-flex items-center gap-1.5 text-sm text-gray-700 hover:text-gray-900" do %>
                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                  </svg>
                  Twitter
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </article>
</section>
